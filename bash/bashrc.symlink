### ---------------------------------------------------------------------------
### General
### ---------------------------------------------------------------------------

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

shopt -s checkwinsize

set -o emacs

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

### ---------------------------------------------------------------------------
### Auto completion
### ---------------------------------------------------------------------------
shopt -s extglob 2>/dev/null
shopt -s globstar 2>/dev/null
shopt -s hostcomplete 2>/dev/null
shopt -s nocaseglob 2>/dev/null

bind "TAB:menu-complete"
bind "set show-all-if-ambiguous on"

# Load bash_completion (including git support)
[ -f /etc/bash_completion ] && . /etc/bash_completion
[ -f /etc/bash_completion.d/git-prompt ] && . /etc/bash_completion.d/git-prompt
[ -f /etc/bash_completion.d/git ] && . /etc/bash_completion.d/git

### ---------------------------------------------------------------------------
### Environment variables
### ---------------------------------------------------------------------------

if [[ $TERM == xterm ]] ; then
    TERM=xterm-256color
fi

export DOTFILES="$HOME/.dotfiles"

export PATH="$HOME/bin:$DOTFILES/bin:$HOME/.local/bin/:$PATH"

export VISUAL="vim"
export EDITOR="$VISUAL"

### ---------------------------------------------------------------------------
### Directories
### ---------------------------------------------------------------------------
shopt -s autocd 2>/dev/null
shopt -s cdspell 2>/dev/null
shopt -s cdable_vars 2>/dev/null
shopt -s dirspell 2>/dev/null

alias ls='ls --color=auto'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

### ---------------------------------------------------------------------------
### Aliases
### ---------------------------------------------------------------------------

# Remove shortcuts
alias rr="rm -rf"

# Directory navigation aliases
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

alias -- -='cd -'

# Ls aliases
alias lsa='ls -lah'
alias l='ls -lah'
alias ll='ls -lh'
alias la='ls -lAh'

# Git alias
alias g="git"
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit -a'
alias gcam='git commit -a -m'
alias gce='git commit -e'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdt='git diff-tree --no-commit-id --name-only -r'
alias gl='git log --stat'
alias gpush='git push'
alias gpull='git pull --rebase'
alias gr='git remote'
alias gs='git status -sb'


# Output the week number
alias week="date +%V"

### ---------------------------------------------------------------------------
### Customization
### ---------------------------------------------------------------------------

export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWUPSTREAM="auto"

export PS1=""

# Add user and hostname if there is a SSH connection
[[ -n "$SSH_CONNECTION" ]] && export PS1="$PS1\[\033[01;32m\]\u@\h "

# Add the current working folder
SELECT="if [[ \$? != 0 ]]; then echo -e \"\[\033[01;31m\]\"; else echo -e \"\[\033[01;34m\]\" ; fi"
export PS1="$PS1\`${SELECT}\`\w "

# Add git information (if available)
[[ $(type __git_ps1 2> /dev/null) ]] && export PS1="$PS1\[\033[01;33m\]\$(__git_ps1 '(%s) ')"

# Add the dollar symbol
export PS1="$PS1\[\033[01;34m\]\$\[\033[00m\] "


### ---------------------------------------------------------------------------
### History
### ---------------------------------------------------------------------------

set -o histexpand

shopt -s cmdhist
shopt -s histappend

HISTCONTROL=ignoreboth
HISTSIZE=1000
HISTFILESIZE=2000

### ---------------------------------------------------------------------------
### FZF Plugin
### ---------------------------------------------------------------------------

if [[ -d "$HOME/.fzf" ]] ; then
    export PATH="$PATH:$HOME/.fzf/bin"
    export MANPATH="$MANPATH:$HOME/.fzf/man"

    [[ $- == *i* ]] && source "$HOME/.fzf/shell/completion.bash" 2> /dev/null

    source "$HOME/.fzf/shell/key-bindings.bash"
fi

### ---------------------------------------------------------------------------
### Z Plugin
### ---------------------------------------------------------------------------
Z_HOME="$HOME/.local/share/z/"
if [[ ! -d "$Z_HOME" ]] ; then
    git clone https://github.com/rupa/z $Z_HOME
fi
. $Z_HOME/z.sh

### ---------------------------------------------------------------------------
### Load machine-specific config files
### ---------------------------------------------------------------------------

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# Customize to your needs...
if [ -f $HOME/.bashrc.local ]; then
    source $HOME/.bashrc.local
fi

